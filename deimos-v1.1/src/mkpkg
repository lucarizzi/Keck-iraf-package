# Make the DEIMOS package.

$call	relink
$exit

update:
	$call	relink
	$call	install
	;

relink:
	$set	LIBS = "-lllsq -lxtools -liminterp -lsurfit -lgsurfit -lcurfit -lslalib ../cfitsio/libcfitsio.a"

	$call	prep
	$update	libpkg.a
	$omake	x_deimos.x
	$link	x_deimos.o libpkg.a $(LIBS) -o xx_deimos.e
	;

install:
	$move	xx_deimos.e ../../bin$(arch)/x_deimos.e
	;

# This tricky bit is copped straight from mtools$mysplot.  Its purpose
# it to get the libpkg.a file from onedspec, which includes nifty code
# for computing gaussian fits.
prep:
	$ifnfile (libpkg.a)
	    $iffile (noao$onedspec/libpkg.a)
		$copy noao$onedspec/libpkg.a libpkg.a
		!touch -t 198001010100 libpkg.a
	    $else
		$iffile (noao$bin$(arch)/OBJS.arc.Z)
		    !zcat $iraf/noao/bin$arch/OBJS.arc.Z | rtar -xvp \
		     onedspec/ onedspec/libpkg.a
		    !touch -t 198001010100 libpkg.a
		$else
		    $echo "Can't find ONEDSPEC libpkg.a anywhere"
		    $exit
		$endif
	    $endif
	$endif
	;

libpkg.a:
	etc.x
	keck_util.x	<math.h> "keck.h"
	fitsgen.x	<time.h> "ftab.h"
	deimos_util.x	<math.h> <math/gsurfit.h> "deimos.h" "keck.h"
	dsim.x		<math.h> "deimos.h" "dsimulator.h"
	dsim2.x		<math.h> "deimos.h" "dsimulator.h"
	dsim3.x		<math.h> "keck.h" "dsimulator.h" "deimos.h" "fitsio.h"
	dsimgraph.x	<math.h> <gset.h> <gim.h> "dsimulator.h" "deimos.h"
	dswd.x		<time.h> <math.h> "deimos.h" "dsimulator.h" "ftab.h"
	dsplot.x	<math.h> "dsimulator.h"
	refl.x		<math.h>
	refr.x		<math.h>
	trace.x		<math.h> <imhdr.h> "deimos.h" "instrument.h"
	qtrmap.x	<math.h> "instrument.h"
	qmodel.x	<math.h> <math/gsurfit.h> "instrument.h"
	qrevmod.x	<math.h> <math/gsurfit.h> "instrument.h"
	dmos.x		<imhdr.h> <error.h>
	futil.x         "futil.h"
	xbox.x		<gset.h> <math.h> "futil.h" "align.h" "instrument.h"
	xb_util.x	<gset.h> <math.h> "futil.h" "instrument.h" "deimos.h"
	xb2.x		"fitsio.h" "align.h" "instrument.h"
	;
